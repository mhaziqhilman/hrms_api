# Application
NODE_ENV=development
PORT=3000
FRONTEND_URL=http://localhost:4200

# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_NAME=hrms_db
DB_USER=root
DB_PASSWORD=
DB_SYNC=true

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d
SESSION_TIMEOUT=60
REMEMBER_ME_DURATION=30

# Email Configuration
EMAIL_SERVICE=gmail
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-email-password
EMAIL_FROM_NAME=HRMS System
EMAIL_FROM_EMAIL=noreply@hrms.com

# LHDN MyInvois Configuration
LHDN_API_URL=https://api.myinvois.hasil.gov.my
LHDN_CLIENT_ID=your-lhdn-client-id
LHDN_CLIENT_SECRET=your-lhdn-client-secret
LHDN_ENVIRONMENT=sandbox
LHDN_TIMEOUT=30000

# File Upload Configuration
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=5242880

# Logging
LOG_LEVEL=info

# Company Information
COMPANY_NAME=Your Company Name
COMPANY_TIN=
COMPANY_BRN=
COMPANY_ADDRESS=

# Other Services (Optional)
SMS_API_KEY=
SMS_SENDER_ID=
CLOUD_STORAGE_BUCKET=
